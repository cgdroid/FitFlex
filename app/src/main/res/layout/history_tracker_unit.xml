<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/day_abbreviation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="S"
        android:textColor="@color/gray"
        android:textSize="9sp"/>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/day_selector"
            android:background="@drawable/radio_button_200"
            android:layout_width="@dimen/radio_button_diameter_100"
            android:layout_height="@dimen/radio_button_diameter_100"/>
        <ImageView
            android:id="@+id/check_day"
            android:layout_width="@dimen/radio_button_diameter_100"
            android:layout_height="@dimen/radio_button_diameter_100"
            android:visibility="gone"
            tools:src="@drawable/ic_baseline_check_circle_24"
            tools:tint="@color/secondary_background"
            tools:visibility="visible"/>
    </RelativeLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/day_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1"
        android:textSize="9sp"
        android:textColor="@color/black"/>

</LinearLayout>